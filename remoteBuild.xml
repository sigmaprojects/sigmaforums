<project name="Remote Build" default="BuildRemote"> 
   
	<target name="BuildRemote"> 
		<!-- any  tasks loaded just use classes from the antlib directory (even ant4cf) --> 
		<taskdef name="configure" classname="com.alagad.ant4cf.Configure" classpath="antlib/ant4cf-java-2.0-SNAPSHOT-jar-with-dependencies.jar" /> 
		<taskdef name="service" classname="com.alagad.ant4cf.Service" classpath="antlib/ant4cf-java-2.0-SNAPSHOT-jar-with-dependencies.jar" />
		<property name="webroot" value="C:\inetpub\wwwroot\sigmaforums" /> 
		<configure ant4cfUrl="http://cfide.sigmaprojects.org/CFIDE/ant4cf/" adminPassword="${cfAdminPassword}" /> 

		<!-- get the app --> 
		<echo message="Export App out of SVN" /> 
		<exec executable="svn">
			<arg line="export --trust-server-cert --non-interactive --force --username ${svnUsername} --password ${svnPassword} http://svn.sigmaprojects.org:8443/svn/sigmaforums/ ${webroot}" /> 
		</exec> 

		<!-- reload the application -->  
		<echo message="reload the application" /> 
		<get src="http://sigmaforums.sigmaprojects.org/?fwreinit=1" dest="init.txt"/> 
		<delete file="init.txt" /> 
	</target> 
   
</project>
